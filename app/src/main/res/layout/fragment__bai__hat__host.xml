<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frament.Fragment_Bai_Hat_Host"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtnhungbaihatnoibat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Những ba hát nổi bật"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtxemthembaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem Thêm..."
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/xam"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvbaihatnoibat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtnhungbaihatnoibat"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>


</RelativeLayout>