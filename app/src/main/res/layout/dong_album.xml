<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/black">


    <androidx.cardview.widget.CardView
        android:id="@+id/crviewalbum"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp">
        <ImageView
            android:id="@+id/imageviewalbums"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="#D5D2D2"
            android:scaleType="fitXY"/>
        <View
            android:layout_width="140dp"
            android:layout_height="140dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txttitletenalbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crviewalbum"
        android:text="ten albummmmm"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="9dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txttencasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txttitletenalbum"
        android:text="VÅ©"
        android:layout_marginLeft="9dp"
        android:textSize="16sp"
        android:textColor="@color/xam"/>

</RelativeLayout>