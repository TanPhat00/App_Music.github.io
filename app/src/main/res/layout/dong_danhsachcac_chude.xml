<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/black">

    <FrameLayout
        android:id="@+id/containerdanhsachcacchude"
        android:layout_width="180dp"
        android:layout_height="180dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">
            <ImageView
                android:id="@+id/imageviewdanhsachcacchude"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@color/xam"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

    </FrameLayout>
    <TextView
        android:id="@+id/textviewtendanhsachchude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:ellipsize="end"
        android:text="mmmmmmmmmmmmmmmm"
        android:maxLines="3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@id/containerdanhsachcacchude"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/xam"
        android:text="Various Artists"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_below="@id/textviewtendanhsachchude"/>

</RelativeLayout>