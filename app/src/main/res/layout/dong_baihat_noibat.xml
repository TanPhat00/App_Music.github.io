<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/carviewbaihathost"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="3dp"
            android:layout_marginBottom="3dp">

        <ImageView
            android:id="@+id/imageviewbaihathost"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/custom_background_banner"
            android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/txttitletenbaihathost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên bài hát"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/carviewbaihathost"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/txttencasicuabaihathost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên ca sĩ"
        android:layout_below="@id/txttitletenbaihathost"
        android:layout_toRightOf="@id/carviewbaihathost"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/xam"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/iconhoriz"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/baseline_more_horiz_24"
        android:background="@android:color/transparent"
        android:tint="@color/white"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imgluotthich"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iconhoriz"
            android:layout_marginRight="15dp"
            android:src="@drawable/baseline_timrong_border_24"
            android:background="@android:color/transparent"
            android:tint="@color/white"
          />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttencasicuabaihathost"
            android:layout_toRightOf="@id/carviewbaihathost"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/iconPlay"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_play_arrow_24"
                android:background="@android:color/transparent"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/txtSoLuongNghe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:layout_marginLeft="5dp"
                android:textColor="@color/xam"/>
            <TextView
                android:id="@+id/txtThoiLuongBaiHat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_marginLeft="5dp"
                android:textColor="@color/xam"
                />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>