<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PlaynhacActivity"
    android:weightSum="10"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarplaynhac"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
<!--        <RelativeLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->
<!--        <androidx.appcompat.widget.AppCompatImageButton-->
<!--            android:id="@+id/btnback5"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:src="@drawable/baseline_arrow_back_ios_24"-->
<!--            android:background="@drawable/background_button_back"-->
<!--            android:paddingLeft="6dp"-->
<!--            android:tint="@color/white8"/>-->
<!--        </RelativeLayout>-->
    </androidx.appcompat.widget.Toolbar>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerplaynhac"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@color/black">
    </androidx.viewpager.widget.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textviewtimesong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="@color/white"
                android:text="00:00"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <SeekBar
                android:id="@+id/seekbarplaynhac"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_weight="9"
                android:progressDrawable="@drawable/seekbar_background"/>
            <TextView
                android:id="@+id/textviewtotaltimesong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="00:00"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imagerandom"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/shuffle"
                android:background="@null"
                android:tint="@color/white"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgbtnprevious"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_skip_previous_24"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginRight="10dp"
                android:tint="@color/white"
                android:layout_marginTop="5dp"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgbtnplaycircle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/baseline_play_circle_24"
                android:background="@null"
                android:tint="@color/white" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgbtnnext"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_skip_next_24"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:tint="@color/white"
                android:layout_marginTop="5dp"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imagexoaybai"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/baseline_sync_24"
                android:background="@null"
                android:tint="@color/white"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>