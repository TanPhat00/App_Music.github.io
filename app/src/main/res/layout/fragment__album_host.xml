<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frament.Fragment_AlbumHost"
    android:background="@color/black">

  <RelativeLayout
      android:padding="7dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:id="@+id/txttitlealbum"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:textStyle="bold"
          android:text="Album Host"/>
      <TextView
          android:id="@+id/idxemthemalbum"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Xem them..."
          android:textSize="18sp"
          android:layout_alignParentRight="true"
          android:textColor="@color/xam"/>
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvalbum"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/txttitlealbum"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"/>
  </RelativeLayout>

</RelativeLayout>